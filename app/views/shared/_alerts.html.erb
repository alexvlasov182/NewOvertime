<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: 'Timetracker App Alert', sticky: false, image: :notice) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: 'Timetracker App Error', sticky: false, image: :notice) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: 'Timetracker Notification', sticky: false, image: :notice) %>
<%	end  %>