<%=	 form_for @post do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: 'Timetracker Notification', sticky: false, image: :notice) %>
    <% end %>
  <% end	  %>


  <div class="form-group">
    <%= f.label :date, class: 'control-label' %>
    <%=	 f.text_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :rationale, class: 'control-label' %>
    <%=	 f.text_area :rationale, class: 'form-control' %>
  </div>

  <%=	render partial: 'status', locals: {f: f} if current_user.type == 'AdminUser' %>

  <%=	 f.submit 'Save', class: 'btn btn-primary' %>
<% end %>


